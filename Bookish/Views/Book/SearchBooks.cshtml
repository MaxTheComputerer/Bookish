<div class="container">
    <h2>Search</h2>
    @using (Html.BeginForm("SearchBooksResults", "Book", FormMethod.Post))
    {
        @foreach (var property in typeof(BookModel).GetProperties())
        {
            if (property.Name != "Id")
            {
                <div class="mb-3">
                    <label for="@property.Name" class="form-label">@property.Name</label>
                    <input type="text" class="form-control" id="@property.Name" name="searchParameters.@property.Name">
                </div>
            }
        }
        <div class="mb-3">
            <label for="orderBy" class="form-label">Order by</label>
            <select class="form-select" id="orderBy" name="orderBy">
                @foreach (var property in typeof(BookModel).GetProperties())
                {
                    <option value="@property.Name">@property.Name</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Search</button>
    }
</div>